<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <Button
        android:text="About"
        android:id="@+id/button15"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/custombutton1"
        android:onClick="showMenu"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:elevation="10dp"
        android:textSize="30dp"
        android:fontFamily="casual"
        android:textColor="#FFFFFF"
        android:paddingRight="20dp"
        android:layout_weight="0.05"
        android:layout_marginBottom="13dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button13"
        android:layout_alignStart="@+id/button13" />

    <Button
        android:text="Compass"
        android:id="@+id/button13"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/custombutton1"
        android:onClick="showMenu"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:elevation="10dp"
        android:textSize="30dp"
        android:fontFamily="casual"
        android:textColor="#FFFFFF"
        android:paddingRight="20dp"
        android:layout_weight="0.05"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/button14"
        android:layout_alignLeft="@+id/button11"
        android:layout_alignStart="@+id/button11" />

    <Button
        android:text="Trails"
        android:id="@+id/button11"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/custombutton1"
        android:onClick="showMenu"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:elevation="10dp"
        android:textSize="30dp"
        android:fontFamily="casual"
        android:textColor="#FFFFFF"
        android:paddingRight="20dp"
        android:layout_weight="0.05"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/button12"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Weather"
        android:id="@+id/button12"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/custombutton2"
        android:onClick="showMenu"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:elevation="10dp"
        android:textSize="30dp"
        android:fontFamily="casual"
        android:textColor="#FFFFFF"
        android:paddingLeft="41dp"
        android:layout_weight="0.05"
        android:layout_marginBottom="11dp"
        android:layout_marginRight="36dp"
        android:layout_marginEnd="36dp"
        android:layout_above="@+id/button13"
        android:layout_alignRight="@+id/button13"
        android:layout_alignEnd="@+id/button13" />

    <Button
        android:text="Maps"
        android:id="@+id/button14"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/custombutton2"
        android:onClick="showMenu"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:elevation="10dp"
        android:textSize="30dp"
        android:fontFamily="casual"
        android:textColor="#FFFFFF"
        android:paddingLeft="40dp"
        android:layout_weight="0.05"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/button15"
        android:layout_alignLeft="@+id/button12"
        android:layout_alignStart="@+id/button12" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textStyle="normal|bold"
        android:textSize="36sp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:fontFamily="cursive"
        android:background="@drawable/path"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/trailslogo"
        android:id="@+id/imageView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/postt"
        android:id="@+id/imageView5"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:layout_below="@+id/imageView4"
        android:layout_alignRight="@+id/button12"
        android:layout_alignEnd="@+id/button12" />

</RelativeLayout>